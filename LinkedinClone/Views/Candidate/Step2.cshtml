@model LinkedinClone.Models.Candidate

<h1>Step 2</h1>

<form asp-action="Step2" method="post" enctype="multipart/form-data">
    @*<input type="hidden" asp-for="Id" value="@Model.Id" />*@
    <input type="hidden" asp-for="FirstName" value="@Model.FirstName" />
    <input type="hidden" asp-for="LastName" value="@Model.LastName" />
    <input type="hidden" asp-for="Email" value="@Model.Email" />
    <input type="hidden" asp-for="Phone" value="@Model.Phone" />
    <input type="hidden" asp-for="EducationLevel" value="@Model.EducationLevel" />
    <input type="hidden" asp-for="YearsOfExperience" value="@Model.YearsOfExperience" />
    <input type="hidden" asp-for="LastEmployer" value="@Model.LastEmployer" />

    <div class="form-group">
        <label>CV File</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="cvFile" name="cvFile" />
            <label class="custom-file-label" for="cvFile">Choose file</label>
        </div>
        <span asp-validation-for="CvFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Next</button>
    </div>
</form>